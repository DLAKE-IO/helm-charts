{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        },
        "tag": { "type": "string" }
      }
    },
    "cryptgeon": {
      "type": "object",
      "properties": {
        "max_views": { "type": "integer", "minimum": 1 },
        "max_expiration": { "type": "integer", "minimum": 1 },
        "verbosity": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug", "trace"]
        },
        "allow_advanced": { "type": "string" },
        "size_limit": { "type": "string" },
        "theme_image": { "type": "string" },
        "theme_text": { "type": "string" },
        "theme_page_title": { "type": "string" },
        "theme_favicon": { "type": "string" }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "externalRedis": {
      "type": "object",
      "properties": {
        "existingSecretName": { "type": "string" },
        "existingSecretKey": { "type": "string" }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      }
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    }
  }
}
